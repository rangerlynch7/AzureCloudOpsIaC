{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "HdiClusterName": {
            "type": "string",
            "metadata": {
                "description": "Cluster Name"
            }
        },
        "HdiVersion": {
            "defaultValue": "4.0",
            "type": "string",
            "metadata": {
                "description": "HDInsight Cluster version."
            }
        },
        "ArtifactsFolder": {
            "defaultValue": "artifacts",
            "type": "string",
            "metadata": {
                "description": "storage container in Clusterstorageaccount with artifacts"
            }
        },
        "CertSrvPass": {
            "type": "securestring",
            "metadata": {
                "description": "Keypass & Storepass to access jks file"
            }
        },
        "HdiCountWorker": {
            "defaultValue": 3,
            "type": "int",
            "metadata": {
                "description": "number of Cluster Worker Nodes"
            }
        },
        "HdiCountZookeeper": {
            "defaultValue": 3,
            "type": "int",
            "metadata": {
                "description": "number of Cluster Worker Nodes"
            }
        },
        "DataDisksGroupsDisksPerNode": {
            "defaultValue": 2,
            "type": "int",
            "metadata": {
                "description": "Disks per node"
            }
        },        
        "ClusterKind": {
            "allowedValues": [
                "kafka",
                "spark"
            ],
            "defaultValue": "kafka",
            "type": "string",
            "metadata": {
                "description": "ClusterKind of Cluster: spark, kafka etc."
            }
        },
        "HdiLoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password must be at least 10 characters in length and must contain at least one digit, one non-alphanumeric character, and one upper or lower case letter."
            }
        },
        "HdiLoginUserName": {
            "defaultValue": "admin",
            "type": "string",
            "metadata": {
                "description": "These credentials can be used to submit jobs to the Cluster and to log into Cluster dashboards."
            }
        },
        "HdiScriptUriHead": {
            "defaultValue": "hdinsight-kafka-head.sh",
            "type": "string"
        },
        "HdiScriptUriWorker": {
            "defaultValue": "hdinsight-kafka-worker.sh",
            "type": "string"
        },
        "HdiScriptUriZookeeper": {
            "defaultValue": "hdinsight-kafka-zookeeper.sh",
            "type": "string"
        },
        "HdiSshPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password must be at least 10 characters in length and must contain at least one digit, one non-alphanumeric character, and one upper or lower case letter."
            }
        },
        "HdiSshUserName": {
            "defaultValue": "sshuser",
            "type": "string",
            "metadata": {
                "description": "These credentials can be used to remotely access the Cluster."
            }
        },
        "HdiStorageAccountName": {
            "type": "string",
            "metadata": {
                "description": "storage account name"
            }
        },
        "HdiComponentVersionKafka": {
            "defaultValue": "1.1",
            "type": "string"
        },
        "HdiVmSizeHeadNode": {
            "defaultValue": "large",
            "type": "string"
        },
        "HdiVmSizeWorkerNode": {
            "defaultValue": "large",
            "type": "string"
        },
        "HdiVmSizeZookeeperNode": {
            "defaultValue": "medium",
            "type": "string"
        },
        "VNetId": {
            "type": "string"
        },
        "HdiVNetSubnetName": {
            "type": "string"
        },
        "HdiTier": {
            "defaultValue": "Standard",
            "type": "string"
        }
    },
    "variables": {
        "HdiClusterName": "[concat(parameters('HdiClusterName'))]",
        "ScriptParameters": "[concat(' -a ',parameters('ArtifactsFolder'),' -u ',parameters('HdiLoginUserName'),' -p ',parameters('HdiLoginPassword'),' -k ',parameters('CertSrvPass'),' -s ',parameters('CertSrvPass'))]",
        "VNetSubnetRef": "[concat(parameters('VNetId'), '/subnets/', parameters('HdiVNetSubnetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.HDInsight/clusters",
            "name": "[variables('HdiClusterName')]",
            "apiVersion": "2015-03-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "clusterVersion": "[parameters('HdiVersion')]",
                "osType": "Linux",
                "tier": "[parameters('HdiTier')]",
                "ClusterDefinition": {
                    "Kind": "[parameters('ClusterKind')]",
                    "componentVersion": {
                        "Kafka": "[parameters('HdiComponentVersionKafka')]"
                    },
                    "configurations": {
                        "gateway": {
                            "restAuthCredential.isEnabled": true,
                            "restAuthCredential.username": "[parameters('HdiLoginUserName')]",
                            "restAuthCredential.password": "[parameters('HdiLoginPassword')]"
                        }
                    }
                },
                "computeProfile": {
                    "roles": [
                        {
                            "hardwareProfile": {
                                "vmSize": "[parameters('HdiVmSizeHeadNode')]"
                            },
                            "name": "headnode",
                            "minInstanceCount": 1,
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "password": "[parameters('HdiSshPassword')]",
                                    "username": "[parameters('HdiSshUserName')]"
                                }
                            },
                            "scriptActions": [
                                {
                                    "isHeadNode": true,
                                    "name": "head",
                                    "parameters": "[variables('ScriptParameters')]",
                                    "uri": "[parameters('HdiScriptUriHead')]"
                                }
                            ],
                            "targetInstanceCount": 2,
                            "virtualNetworkProfile": {
                                "id": "[parameters('VNetId')]",
                                "subnet": "[variables('VNetSubnetRef')]"
                            }
                        },
                        {
                            "hardwareProfile": {
                                "vmSize": "[parameters('HdiVmSizeWorkerNode')]"
                            },
                            "name": "workernode",
                            "dataDisksGroups": [
                                {
                                    "disksPerNode": "[parameters('dataDisksGroupsDisksPerNode')]"
                                }
                            ],
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "password": "[parameters('HdiSshPassword')]",
                                    "username": "[parameters('HdiSshUserName')]"
                                }
                            },
                            "scriptActions": [
                                {
                                    "isWorkerNode": true,
                                    "name": "worker",
                                    "parameters": "[variables('ScriptParameters')]",
                                    "uri": "[parameters('HdiScriptUriWorker')]"
                                }
                            ],
                            "targetInstanceCount": "[parameters('HdiCountWorker')]",
                            "virtualNetworkProfile": {
                                "id": "[parameters('VNetId')]",
                                "subnet": "[variables('VNetSubnetRef')]"
                            }
                        },
                        {
                            "hardwareProfile": {
                                "vmSize": "[parameters('HdiVmSizeZookeeperNode')]"
                            },
                            "name": "zookeepernode",
                            "minInstanceCount": 1,
                            "osProfile": {
                                "linuxOperatingSystemProfile": {
                                    "username": "[parameters('HdiSshUserName')]",
                                    "password": "[parameters('HdiSshPassword')]"
                                }
                            },
                            "scriptActions": [
                                {
                                    "isWorkerNode": true,
                                    "name": "zookeeper",
                                    "parameters": "[variables('ScriptParameters')]",
                                    "uri": "[parameters('HdiScriptUriZookeeper')]"
                                }
                            ],
                            "targetInstanceCount": "[parameters('HdiCountZookeeper')]",
                            "virtualNetworkProfile": {
                                "id": "[parameters('VNetId')]",
                                "subnet": "[variables('VNetSubnetRef')]"
                            }
                        }
                    ]
                },
                "storageProfile": {
                    "storageaccounts": [
                        {
                            "container": "[parameters('HdiClusterName')]",
                            "isDefault": true,
                            "key": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('HdiStorageAccountName')), '2015-05-01-preview').key1]",
                            "name": "[concat(parameters('HdiStorageAccountName'),'.blob.core.windows.net')]"
                        }
                    ]
                }
            },
            "dependsOn": []
        }
    ],
    "outputs": {
        "ScriptParameters": {
            "type": "string",
            "value": "[variables('ScriptParameters')]"
        }
    }
}